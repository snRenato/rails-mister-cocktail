<h1 class="text-center">Cocktails</h1>
<div class="container mt-4">
  <div class="row">
      <%@cocktails.each do |cocktail|%>
        <div class="col-auto mb-3">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%=link_to cocktail.name, cocktail%></h5>
            </div>
          </div>
        </div>
      <%end%>
  </div>
</div>

